{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@payments/shared": ["libs/shared/src/index.ts"],
      "@payments/shared/dto": ["libs/shared/src/lib/dto/index.ts"],
      "@payments/shared/model": ["libs/shared/src/lib/model/index.ts"],
      "@payments/shared/constant": ["libs/shared/src/lib/constant/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
